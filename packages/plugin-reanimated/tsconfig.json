{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "rootDirs": ["src", "../repack/src"],
    "paths": {
      "@callstack/repack": ["../repack/src/index.ts"],
      "@callstack/repack/*": ["../repack/src/*"]
    }
  },
  "include": ["src/**/*"]
}
