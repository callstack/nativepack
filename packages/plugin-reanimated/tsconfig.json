{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts"]
}
