{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "detect-package-manager": [
        "./node_modules/detect-package-manager/dist/index.d.ts"
      ]
    }
  },
  "include": ["src/**/*.ts"]
}
