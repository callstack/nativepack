{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "lib": ["ES2020", "ES2021"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
