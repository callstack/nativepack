{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "node16",
    "moduleResolution": "node16",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "isolatedDeclarations": true
  },
  "include": ["src/**/*.ts"]
}
